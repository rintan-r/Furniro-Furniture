model ProductDetail {
  id        String    @id @default(uuid())
  SKU       String    @unique
  category  String
  tags      String[]
  material  String?
  warranty  String?
  origin    String?
  createdAt DateTime  @default(now())

  productId String   @unique
  product   Product  @relation(fields: [productId], references: [id])
  reviews   Review[]

  @@map("product_detail")
}